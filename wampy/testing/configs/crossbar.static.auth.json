{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "wampy",
                            "permissions": [
                                {
                                    "uri": "get_foo",
                                    "match": "exact",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                   "type": "websocket",
                   "endpoint": {
                      "type": "tcp",
                      "port": 8080,
                      "version": 4,
                      "interface": "localhost"
                   },
                   "auth": {
                        "wampcra": {
                            "type": "static",
                            "role": "wampy",
                            "users": {
                                "foo-service": {
                                    "secret": "secret1",
                                    "role": "wampy"
                                },
                                "joe": {
                                    "secret": "secret2",
                                    "role": "wampy"
                                },
                                "peter": {
                                    "secret": "prq7+YkJ1/KlW1X0YczMHw==",
                                    "role": "wampy",
                                    "salt": "salt123",
                                    "iterations": 100,
                                    "keylen": 16
                                }
                            }
                        },
                        "ticket": {
                            "type": "static",
                            "role": "wampy",
                            "principals": {
                                "martin": {
                                    "ticket": "wEx9TPFtHdRr2Zg7rtRE",
                                    "role": "wampy"
                                }
                            }
                        },
                        "anonymous": {
                            "type": "static",
                            "role": "wampy"
                        }
                    }
                }
            ]
        }
    ]
}
